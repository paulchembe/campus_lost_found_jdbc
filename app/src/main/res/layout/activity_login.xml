<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0B6CC"
    android:orientation="vertical"
    android:padding="24dp">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:background="@drawable/trends2"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:lineSpacingExtra="8sp"
        android:text="Our App provides a centralized system to record and track lost or found items"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="84dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/bottom_btn3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="112dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/roundedcorner"
        android:text="User Login"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/etIdentifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student number or email"

        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp" />


    <LinearLayout
        android:layout_width="354dp"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="170dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/roundedcorner"
            android:backgroundTint="#4CAF50"
            android:text="Login"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="153dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedcorner"
            android:backgroundTint="#2196F3"
            android:text="Register"
            android:textSize="20dp" />

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:backgroundTint="#A0B6CC"
        android:background="#A0B6CC"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />


</LinearLayout>
